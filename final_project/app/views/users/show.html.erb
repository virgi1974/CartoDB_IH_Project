<% if current_user %>
 <div class="container-fluid">
    <header class="row">
      <section class="col-sm-12 text-center">
        <p><strong>Name:</strong>  <%= current_user.name %> <strong>Email:</strong> <%= current_user.email %></p>
      </section>
    </header>
  </div>
<% end %>

 <div class="container-fluid">
    <header class="row">
      <section class="col-md-5 text-center">
        <%= link_to 'New Map', new_user_map_path(current_user), class: "btn btn-primary btn-block" %> 
      </section>
      <section class="col-md-2"></section>
      <section class="col-md-5">

<%= link_to 'My Maps', user_maps_path(current_user), class: "btn btn-info btn-block" %> 

      </section>
    </header>
  </div>

<% unless @maps.nil? %>
  <section class="container">
    <div class="row">
        <% @maps.each do |map| %>
        <div>
          <%=  map.description %>
        </div> 
        <% end %>
    </div>
  </section>
<% end %>


